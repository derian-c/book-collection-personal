<h1>Book Collection</h1>
<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
<% end %>
<table>
    <tr>
        <th> Name &nbsp</th>
        <th> Author &nbsp</th>
        <th> Price &nbsp</th>
        <th> Published Date </th>
    </tr>
<% @books.each do |book| %>
    <tr>
        <td> <%= book.name %> &nbsp</td>
        <td> <%= book.author %> &nbsp</td>
        <td> <%= book.price %> &nbsp</td>
        <td> <%= book.published_date %> &nbsp</td>
        <td> <%= link_to("Details", book_path(book)) %> </td>
        <td> <%= link_to("Edit", edit_book_path(book)) %> </td>
        <td> <%= link_to("Delete", delete_book_path(book)) %> </td>
    </tr>
<% end %>
</table>
<p> <%= link_to("Add Book", new_book_path) %> </p>
