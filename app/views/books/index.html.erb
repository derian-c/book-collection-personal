<h1>Book Collection</h1>

<table>
    <tr>
        <th> Name </th>
    </tr>
<% @books.each do |book| %>
    <tr>
        <td> <%= book.name %> </td>
        <td> <%= link_to("Details", book_path(book)) %> </td>
        <td> <%= link_to("Edit", edit_book_path(book)) %> </td>
        <td> <%= link_to("Delete", delete_book_path(book)) %> </td>
    </tr>
<% end %>
</table>
<p> <%= link_to("Add Book", new_book_path) %> </p>
